@model RoadRecordViolationSystem.ViewModels.ArchiveUserViewModel
@using Newtonsoft.Json;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ 
    string status = Model.Status.Equals("ACTIVE") ? "ARCHIVE" : "ACTIVE";
}

<div class="modal-body">
    <p>Do you want to <b>@status</b> user @Model.UserName ?  </p>    
</div>

<div class="modal-footer">
    <span class="float-end"><button class="btn btn-danger mx-2" onclick="archiveActiveUser('/AdminAccounts/ArchiveActivateUser',@JsonConvert.SerializeObject(Model))">YES</button><button class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button></span>
</div>