@{
    Layout = "";
}
@model RoadRecordViolationSystem.ViewModels.LoginViewModel

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/SystemLogin.css" type="text/css" />
    <link rel="icon" href="~/homePageImage/dpos-logo.png" />
    <title>Document</title>
    <script type="text/javascript">
        window.history.forward();
        function noBack() {
            window.history.forward();
        }
    </script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>

<body>

    @if (ViewBag.ErrorLogin != null)
    {

        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.ErrorLogin
            <button class="btn btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }

<div class="login-container">
    <p class="login-title">DPOS Violation System</p>
    <p class="text-center fw-bold">LOGIN</p>
    <form class="d-flex flex-column align-items-center mt-2" method="post">
        @if (ViewBag.DisableLogin != null &&  ViewBag.DisableLogin)
                {

            <input type="text" readonly placeholder="Enter Username" asp-for="UserName" class=" mt-3 mb-3" />
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input type="password" readonly placeholder="Enter Password" asp-for="PassWord" class=" mt-3 mb-3" />
            <span asp-validation-for="PassWord"  class="text-danger"></span>
            <input type="submit" asp-controller="Log" disabled asp-action="SystemLogin" asp-route-id="@Model" class="submit" value="Login" />
        }
        else if(ViewBag.DisableLogin is null || !ViewBag.DisableLogin)
        {
            <input type="text" placeholder="Enter Username" asp-for="UserName" class=" mt-3 mb-3" />
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input type="password" placeholder="Enter Password" asp-for="PassWord" class=" mt-3 mb-3" />
            <span asp-validation-for="PassWord" class="text-danger"></span>
            <input type="submit" asp-controller="Log" asp-action="SystemLogin" asp-route-id="@Model" class="submit" value="Login" />
        }
        <div class="form-check">
            <input type="checkbox" asp-for="AlwaysMeIn" class="form-check-input" />
            <label class="form-check-label">Always me in</label>
        </div>
    </form>
    <!--   <a class="menu-home" asp-controller="Log" asp-action="HomePage">HOME</a> -->
</div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Global/someAddRemover.js"></script>
    <partial name="/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

